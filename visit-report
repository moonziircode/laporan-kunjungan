    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            const brilliantBlues = {
                primary: '#00A1E4',
                secondary: '#00B5E2',
                tertiary: '#3CD5E0',
                accent: '#9CF4F9',
                text: '#334155'
            };

            const defaultTooltipCallback = {
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                  return label.join(' ');
                                } else {
                                  return label;
                                }
                            }
                        }
                    },
                    legend: {
                        labels: {
                            color: brilliantBlues.text
                        }
                    }
                }
            };
            
            const wrapLabel = (label) => {
                const maxLen = 16;
                if (typeof label !== 'string' || label.length <= maxLen) {
                    return label;
                }
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                words.forEach(word => {
                    if ((currentLine + ' ' + word).trim().length > maxLen) {
                        lines.push(currentLine.trim());
                        currentLine = word;
                    } else {
                        currentLine = (currentLine + ' ' + word).trim();
                    }
                });
                lines.push(currentLine.trim());
                return lines;
            };

            const performanceCtx = document.getElementById('performanceChart');
            if(performanceCtx) {
                new Chart(performanceCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Jumlah Kunjungan', 'Owner Ditemui', 'Mitra Setuju'],
                        datasets: [
                            {
                                label: 'Target',
                                data: [108, 108, 108],
                                backgroundColor: brilliantBlues.accent,
                                borderColor: brilliantBlues.tertiary,
                                borderWidth: 1
                            },
                            {
                                label: 'Pencapaian',
                                data: [20, 15, 11],
                                backgroundColor: brilliantBlues.primary,
                                borderColor: brilliantBlues.secondary,
                                borderWidth: 1
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        ...defaultTooltipCallback,
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: '#e5e7eb'
                                },
                                ticks: { color: brilliantBlues.text }
                            },
                            x: {
                                grid: {
                                    display: false
                                },
                                ticks: { color: brilliantBlues.text }
                            }
                        }
                    }
                });
            }

            const conversionCtx = document.getElementById('conversionChart');
            if(conversionCtx) {
                new Chart(conversionCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Mitra Setuju', 'Ditolak / Lainnya'],
                        datasets: [{
                            label: 'Hasil Pertemuan',
                            data: [11, 4], 
                            backgroundColor: [
                                brilliantBlues.primary,
                                brilliantBlues.accent
                            ],
                            borderColor: [
                                brilliantBlues.secondary,
                                brilliantBlues.tertiary,
                            ],
                            borderWidth: 2,
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        ...defaultTooltipCallback,
                        plugins: {
                            ...defaultTooltipCallback.plugins,
                            legend: {
                                position: 'bottom',
                                labels: {
                                    color: brilliantBlues.text
                                }
                            }
                        }
                    }
                });
            }

            const activityLogCtx = document.getElementById('activityLogChart');
            if(activityLogCtx) {
                 new Chart(activityLogCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Nov \'24', 'Des \'24', 'Jan \'25', 'Mar \'25', 'Mei \'25', 'Jun \'25'],
                        datasets: [
                            {
                                label: 'Mitra Berhasil Didaftarkan',
                                data: [3, 0, 1, 2, 1, 4],
                                backgroundColor: brilliantBlues.secondary,
                                borderColor: brilliantBlues.primary,
                                borderWidth: 1,
                                borderRadius: 5,
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        ...defaultTooltipCallback,
                        scales: {
                             y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1,
                                    color: brilliantBlues.text
                                },
                                grid: {
                                    color: '#e5e7eb'
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                },
                                ticks: { color: brilliantBlues.text }
                            }
                        },
                        plugins: {
                            ...defaultTooltipCallback.plugins,
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }

        });
    </script>
